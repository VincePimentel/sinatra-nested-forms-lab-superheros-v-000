<h1>Create a Team and Heroes!</h1>

<form class="" action="/teams" method="post">
  <p><label for="">Team Name: </label><input type="text" name="team[name]"></p>
  <p><label for="">Team Motto: </label><input type="text" name="team[motto]"></p>

  <% 3.times do |i| %>
    i += 1
    <h2>Hero <%= i %></h2>
    <p>
      <label for="">Name: </label>
      <input type="text" id="member<%= "#{i}" %>_" name="team[members][name]">
    </p>
    <p>
      <label for="">Power: </label>
      <input type="text" id="member<%= "#{i}" %>_" name="team[members][power]">
    </p>
    <p>
      <label for="">Biography: </label>
      <input type="text" id="member<%= "#{i}" %>_" name="team[members][bio]">
    </p>
  <% end %>

  <input type="submit" name="" value="Submit">

</form>
