<h1>Hero Team Creation</h1>

<form class="" action="/" method="post">
  <p><label for="">Team Name: </label><input type="text" name="team[name]"></p>
  <p><label for="">Team Motto: </label><input type="text" name="team[motto]"></p>

  <% 3.times do |i| %>
    <h2>Hero <%= i + 1 %></h2>
    <p>
      <label for="">Name: </label>
      <input type="text" name="team[members][name]">
    </p>
    <p>
      <label for="">Power: </label>
      <input type="text" name="team[members][power]">
    </p>
    <p>
      <label for="">Biography: </label>
      <input type="text" name="team[members][biography]">
    </p>
  <% end %>

  <input type="submit" name="" value="Submit">

</form>
